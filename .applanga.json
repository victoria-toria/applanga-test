{
  "app": {
    "base_language": "en",
    "push": {
      "source": [
        {
          "path": "./xml/strings.xml",
          "file_format": "android_xml",
          "tag": "app:strings:3908.xml",
          "language": "en"
        }
      ]
    },
    "pull": {
      "target": [
        {
          "path": "./xml/<language>.xml",
          "file_format": "android_xml",
          "tag": "app:strings:3908.xml",
          "exclude_languages": [
            "en"
          ]
        }
      ]
    }
  }
}